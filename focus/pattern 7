#include <bits/stdc++.h>
using namespace std;
int main()
{
   int n,i,j;
   cin>>n;
   for(i=0;i<n;i++){
       for(j=0;j<n;j++){
           if(i==0||i==n-1){
              cout<<"_";
            }
            else if(i == n/2){
                cout<<"*";
            }
            else if(j==0 || j==n-1){
            cout<<"*";
            }
            else{
              cout<<" ";  
            }    
       }
       cout<<"\n";
   }
    return 0;
}
