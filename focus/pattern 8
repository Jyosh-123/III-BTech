#include<bits/stdc++.h>
using namespace std;
int main()
{
	int i,j,n;
	cin>>n;
	for(i=0;i<n;i++)
	{
		for(j=0;j<n;j++)
		{
		  if(i==n/2){
		      cout<<"*";
		  }
		  else if(i==0 || i==n-1){
		      if(j == 0 || j== n-1){
		          cout<<"*";
		      }
		      else{
		          cout<<" ";
		      }
		  }
		  else{
		      if(j==n/2){
		          cout<<" ";
		      }
		      else{
		          cout<<"*";
		      }
		  }
		}
		cout<<endl;
	}

	return 0;
}
